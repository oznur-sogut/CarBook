@model List<CarBook.EntityLayer.Concrete.Car>
@{
    ViewData["Title"] = "CarListWithBrands";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araba Listesi</h1>
<div class="container">
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Model</th>
        <th>Kategori</th>
        <th>Marka</th>
        <th>Vites</th>
        <th>Yıl</th>
        <th>Araba Durumu</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Sitede Gör</th>
    </tr>
    @foreach (var item in Model)
    {
    <tr>
            <td>@item.CarID</td>
            <td>@item.CarModel</td>
            <td>@item.CarCategory.CategoryName</td>
            <td>@item.Brand.BrandName</td>
            <td>@item.GearType</td>
            <td>@item.Year</td>
            <td>@item.CarStatus.CarStatuseName</td>
            <td><a href="/Car/DeleteCar/@item.CarID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Car/UpdateCar/@item.CarID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="/Car/CarDetail/@item.CarID" class="btn btn-outline-warning">Detaylar</a></td>
            <td><a href="#" class="btn btn-outline-danger">Sitede Göre</a></td>
    </tr>
    }
</table>
<a href="/Car/AddCar/" class="btn btn-primary">Yeni Araba Girişi</a>
</div>