@model List<CarBook.EntityLayer.Concrete.CarStatus>
@{
    ViewData["Title"] = "CarStatusIndex";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h1>Araba Durum Listesi</h1>
<div class="container">
<table class=" table table-bordered">
    <tr>
        <th>#</th>
        <th>Durum</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Araba Detayları</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CarStatusID</td>
            <td>@item.CarStatuseName</td>
            <td><a href="/CarStatus/DeleteStatus/@item.CarStatusID" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/CarStatus/UpdateStatus/@item.CarStatusID" class="btn btn-outline-success">Güncelle</a></td>
            <td><a href="#" class="btn btn-outline-warning">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/CarStatus/AddStatus/" class="btn btn-primary">Yeni Araba Durum Girişi</a>
</div>
